<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
	<Button android:id="@+id/btn_add_bankcard"
		android:layout_width="48dip"
		android:layout_height="48dip"
		android:background="@drawable/addblue"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"
		/>

	<Button android:id="@+id/btn_del_bankcard"
		android:layout_width="48dip"
		android:layout_height="48dip"
		android:background="@drawable/deleteblue"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"
		/>

	<Button android:id="@+id/btn_take_money"
		android:layout_width="48dip"
		android:layout_height="48dip"
		android:background="@drawable/cashblue"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"
		android:clickable="true"
		/>

	<Button android:id="@+id/btn_qrcode"
		android:layout_width="48dip"
		android:layout_height="48dip"
		android:background="@drawable/qrcode"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"
		/>

	<Button
	    android:id="@+id/btn_menu"
	    android:layout_width="48dip"
	    android:layout_height="48dip"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
		android:background="@drawable/moreblack"
		 />

</RelativeLayout>
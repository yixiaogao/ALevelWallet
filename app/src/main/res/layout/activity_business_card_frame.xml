<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pic_bg_clear">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/purple">
        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/top_return"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:text="名片浏览"
            android:textSize="22sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <com.theone.a_levelwallet.activity.businessCardFrame.flip.FlipViewGroup
        android:layout_width="fill_parent"
        android:layout_height="450dp"
        android:layout_marginTop="20dp"
        android:id="@+id/flipviewgroup"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
    </com.theone.a_levelwallet.activity.businessCardFrame.flip.FlipViewGroup>

     <Button
         android:layout_width="fill_parent"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="30dp"
         android:layout_marginRight="30dp"
         android:layout_height="50dp"
         android:text="添加名片"
         android:textColor="#ffffff"
         android:id="@+id/businesscardaddbt"
         android:background="@drawable/bt_blue_selector"
         />
</LinearLayout>
